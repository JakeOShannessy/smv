&HEAD CHID='sphere_test1', TITLE='Complex Geometry: test visualization of immersed geometry objects ' /

# 1 MESH:
&MESH IJK=32,32,32, XB=-1.4,1.4,-1.4,1.4,-1.4,1.4 /

&TIME T_END=10 /
&RADI RADIATION=.FALSE. /

&SURF ID='WALLS', COLOR='GRAY', ADIABATIC=T, DEFAULT=T /

SURF ID='SPHERE1', COLOR='RED', CONVECTIVE_HEAT_FLUX=10, TAU_Q=0 /
&SURF ID='SPHERE1', COLOR='RED', TMP_FRONT=100 /

&SLCF PBY=0, QUANTITY='TEMPERATURE', CELL_CENTERED=T /
&SLCF PBY=0, QUANTITY='BACKGROUND PRESSURE', CELL_CENTERED=T /
&SLCF PBY=0, QUANTITY='PRESSURE', CELL_CENTERED=T /

&SLCF PBY=0, QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=0.5, QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=1.0, QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /

&SLCF PBY=0, QUANTITY='TEMPERATURE' /
&SLCF PBY=0.5, QUANTITY='TEMPERATURE' /
&SLCF PBY=1.0, QUANTITY='TEMPERATURE' /

&BNDF QUANTITY='WALL TEMPERATURE' /
&BNDF QUANTITY='CONVECTIVE HEAT FLUX' /

&ISOF QUANTITY='TEMPERATURE',VALUE(1)=25.0 /

&DEVC XB=-1.4,1.4,-1.4,1.4,-1.4,1.4, QUANTITY='INTERNAL ENERGY', ID='U', STATISTICS='VOLUME INTEGRAL', RELATIVE=T /

# Geometries:
&GEOM ID='sphere1', SURF_ID='SPHERE1', SPHERE_ORIGIN=0,0,0, SPHERE_RADIUS=1.0, N_LEVELS=3 /

&TAIL /
