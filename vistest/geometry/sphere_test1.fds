&HEAD CHID='sphere_test1', TITLE='Complex Geometry: test visualization of immersed geometry objects ' /

&MISC FREEZE_VELOCITY=T /

&MESH IJK=20,20,20, XB=0.0,1.0,0.0,1.0,0.0,1.0 /
&MESH IJK=20,20,20, XB=1.0,2.0,0.0,1.0,0.0,1.0 /
&MESH IJK=20,20,20, XB=2.0,3.0,0.0,1.0,0.0,1.0 /

&INIT XB=0.0,1.0,0.0,1.0,0.0,1.0   TEMPERATURE=100.0 /
&INIT XB=1.0,2.0,0.0,1.0,0.0,1.0   TEMPERATURE=200.0 /
&INIT XB=2.0,3.0,0.0,1.0,0.0,1.0   TEMPERATURE=300.0 /

&TIME T_END=10 /
&RADI RADIATION=.FALSE. /

&SURF ID='SPHERE1', COLOR='RED',   TMP_FRONT=400 /
&SURF ID='SPHERE2', COLOR='GREEN', TMP_FRONT=600 /
&SURF ID='SPHERE3', COLOR='BLUE',  TMP_FRONT=800 /

&SLCF PBY=0.5, QUANTITY='BACKGROUND PRESSURE', CELL_CENTERED=T /
&SLCF PBY=0.5, QUANTITY='PRESSURE', CELL_CENTERED=T /

&SLCF PBX=0.5,   QUANTITY='TEMPERATURE', CELL_CENTERED=T, VECTOR=T /
&SLCF PBX=1.5,   QUANTITY='TEMPERATURE', CELL_CENTERED=T /
&SLCF PBX=2.5,   QUANTITY='TEMPERATURE', CELL_CENTERED=T /

&SLCF PBX=0.5,   QUANTITY='TEMPERATURE' /
&SLCF PBX=1.5,   QUANTITY='TEMPERATURE' /
&SLCF PBX=2.5,   QUANTITY='TEMPERATURE' /

&SLCF PBX=0.5,   QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM', VECTOR=T  /
&SLCF PBX=1.5,   QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBX=2.5,   QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /

&SLCF PBY=0.5,   QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM', VECTOR=T  /

&SLCF PBY=0.5,   QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=0.5,   QUANTITY='TEMPERATURE', CELL_CENTERED=T /

&BNDF QUANTITY='WALL TEMPERATURE' /
&BNDF QUANTITY='CONVECTIVE HEAT FLUX' /

&ISOF QUANTITY='TEMPERATURE',VALUE(1)=25.0 /

# Geometries:
&GEOM ID='sphere1', SURF_ID='SPHERE1', SPHERE_ORIGIN=0.5,0.5,0.5, SPHERE_RADIUS=0.3, N_LEVELS=3 /
&GEOM ID='sphere2', SURF_ID='SPHERE2', SPHERE_ORIGIN=1.5,0.5,0.5, SPHERE_RADIUS=0.3, N_LEVELS=3 /
&GEOM ID='sphere3', SURF_ID='SPHERE3', SPHERE_ORIGIN=2.5,0.5,0.5, SPHERE_RADIUS=0.3, N_LEVELS=3 /

&TAIL /
